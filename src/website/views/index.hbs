<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <link rel="icon" type="image/png" href="/favicon-32x32.png?v=3" sizes="32x32" />
  <link rel="icon" type="image/png" href="/favicon-16x16.png?v=3" sizes="16x16" />
  <title>{{title}}</title>
  <!--<link href="/bootstrap.min.css" rel="stylesheet" />-->
  <link href="/bootstrap.yeti.min.css" rel="stylesheet" />
  <link href="/app.css" rel="stylesheet" />
  <link href="/bootstrap-toggle.min.css" rel="stylesheet">
  <link href="/toastr.css" rel="stylesheet"/>

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>

<body>
  <div class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-left" href="#"><img style="margin-top: 7px; margin-bottom: 7px; margin-right: 1em;" src="/logo.png" width="48px"/></a>
        <a class="navbar-brand" href="#" style="margin-top: 7px;">{{title}}</a>
      </div>
       <span class="navbar-text navbar-right userName" style="margin-top: 20px;" title="Best {{user.title}} ever!">
      <img width=16 height=16 class="user-icon" src="{{user.thumbnailPhoto}}" />
      {{user.displayName}}
      </span>      
    </div>   
  </div>
    <div class="container-fluid" id="mainContainer"></div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/bootstrap.min.js"></script>
    <script src="/bootstrap-toggle.min.js"></script>
    <script src="/toastr.js"></script>
    <script src="/main.js"></script>
    <script>
      $(function(){
        $('.build-list-table').css({ height: $(window).innerHeight() - 130 });
        $(window).resize(function(){
          $('.build-list-table').css({ height: $(window).innerHeight() - 130 });
        });
      });
    </script>
    <script>
      toastr.options = {
        "closeButton": false,
        "debug": false,
        "newestOnTop": false,
        "progressBar": false,
        "positionClass": "toast-bottom-right",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "5000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
      };
    </script>   
</body>

</html>
